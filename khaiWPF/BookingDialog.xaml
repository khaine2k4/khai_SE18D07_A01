<Window x:Class="khaiWPF.BookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin Đặt phòng" Height="551" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="lblTitle" Text="Thêm Đặt phòng Mới" 
                      FontSize="20" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Khách hàng:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbCustomer" Height="35" FontSize="14" 
                     DisplayMemberPath="CustomerFullName" SelectedValuePath="CustomerID"/>

            <TextBlock Text="Phòng:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <ComboBox x:Name="cmbRoom" Height="35" FontSize="14" 
                     DisplayMemberPath="RoomNumber" SelectedValuePath="RoomID"/>

            <TextBlock Text="Ngày Nhận phòng:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <DatePicker x:Name="dpCheckInDate" Height="35" FontSize="14"/>

            <TextBlock Text="Ngày Trả phòng:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <DatePicker x:Name="dpCheckOutDate" Height="35" FontSize="14"/>

            <TextBlock Text="Tổng Giá:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <TextBox x:Name="txtTotalPrice" Height="35" FontSize="14" Padding="5" IsReadOnly="True"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button x:Name="btnSave" Content="Lưu" Width="100" Height="35" 
                       Background="#FF28A745" Foreground="White" Margin="0,0,20,0"
                       Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="Hủy" Width="100" Height="35" 
                       Background="#FF6C757D" Foreground="White"
                       Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>