<Window x:Class="khaiWPF.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Information" Height="500" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="lblTitle" Text="Add New Customer" 
                      FontSize="20" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Full Name:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtFullName" Height="35" FontSize="14" Padding="5" MaxLength="50"/>

            <TextBlock Text="Telephone:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <TextBox x:Name="txtTelephone" Height="35" FontSize="14" Padding="5" MaxLength="12"/>

            <TextBlock Text="Email Address:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <TextBox x:Name="txtEmail" Height="35" FontSize="14" Padding="5" MaxLength="50"/>

            <TextBlock Text="Birthday:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <DatePicker x:Name="dpBirthday" Height="35" FontSize="14"/>

            <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="35" FontSize="14" Padding="5" MaxLength="50"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button x:Name="btnSave" Content="Save" Width="100" Height="35" 
                       Background="#FF28A745" Foreground="White" Margin="0,0,20,0"
                       Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="35" 
                       Background="#FF6C757D" Foreground="White"
                       Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>