<Window x:Class="khaiWPF.RoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Information" Height="550" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="lblTitle" Text="Add New Room" 
                      FontSize="20" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Room Number:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtRoomNumber" Height="35" FontSize="14" Padding="5" MaxLength="50"/>

            <TextBlock Text="Room Description:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <TextBox x:Name="txtRoomDescription" Height="70" FontSize="14" Padding="5" 
                    TextWrapping="Wrap" AcceptsReturn="True" MaxLength="220"/>

            <TextBlock Text="Max Capacity:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <TextBox x:Name="txtMaxCapacity" Height="35" FontSize="14" Padding="5"/>

            <TextBlock Text="Price Per Date:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <TextBox x:Name="txtPricePerDate" Height="35" FontSize="14" Padding="5"/>

            <TextBlock Text="Room Type:" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <ComboBox x:Name="cmbRoomType" Height="35" FontSize="14" 
                     DisplayMemberPath="RoomTypeName" SelectedValuePath="RoomTypeID"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button x:Name="btnSave" Content="Save" Width="100" Height="35" 
                       Background="#FF28A745" Foreground="White" Margin="0,0,20,0"
                       Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="35" 
                       Background="#FF6C757D" Foreground="White"
                       Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>