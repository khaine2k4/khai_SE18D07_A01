<Window x:Class="khaiWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FU Mini Hotel System - Login" Height="599" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid Margin="0,0,-141,-55">
		<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="#FF4A90E2" Offset="0"/>
				<GradientStop Color="#FF7B68EE" Offset="1"/>
			</LinearGradientBrush>
		</Grid.Background>

		<Border Background="White" CornerRadius="10" Margin="50">
			<Border.Effect>
				<DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
			</Border.Effect>
			<StackPanel Margin="40">
				<TextBlock Text="FU Mini Hotel System"
                          FontSize="24" FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Foreground="#FF4A90E2" Margin="0,0,0,30"/>

				<TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,0,5"/>
				<TextBox x:Name="txtEmail" Height="35" FontSize="14" Padding="10,5"/>

				<TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,20,0,5"/>
				<PasswordBox x:Name="txtPassword" Height="35" FontSize="14" Padding="10,5"/>

				<Button x:Name="btnLogin" Content="Login" Height="40"
                       Margin="0,30,0,0" FontSize="16" FontWeight="SemiBold"
                       Background="#FF4A90E2" Foreground="White"
                       BorderThickness="0" Click="btnLogin_Click"/>

				<TextBlock x:Name="lblMessage" Foreground="Red"
                          HorizontalAlignment="Center" Margin="0,15,0,0"/>
			</StackPanel>
		</Border>
	</Grid>
</Window>